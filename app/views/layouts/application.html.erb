<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>codeStalk</title>
  <%= stylesheet_link_tag "coderay", "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script>
      $(document).ready(function(){
      });
  </script>
<body>

<div class="container-fluid">
  <div class="row-fluid">
      <div class="span12">
        <!-- Navbar -->
        <div class="navbar">
          <div class="navbar-inner">
            <div class="container">

              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>

              <a class="brand" href="#">codeStalk</a>

              <div class="nav-collapse">
              </div>

            </div>
          </div>
        </div>

        <p>
          <% if flash[:alert] %>
            <div class="alert alert-error">
              <%= flash[:alert] %>
            </div>
        <% end %>
        </p>

        <p>
          <% if flash[:notice] %>
            <div class="alert alert-success">
              <%= flash[:notice] %>
            </div>
        <% end %>
        </p>

        <div class="row">
          <%= yield %>
        </div>
      </div>
  </div>
</div>

</body>
</html>
